@page
@model Project.Pages.CarsModel
@{
    ViewData["Title"] = "Cars page";
}

<html>
    <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" >
    <style>
        body{
            padding: 20px;
        }

        .car-card {
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 20px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Страница информации о ТС</h1>
        <a asp-page="EditCar" class="btn btn-primary btn-create mb-3">Создать</a>
        <div class="row">
            @foreach (var Car in Model.cars)
            {
                <div class="col-md-4">
                    <div class="car-card">
                        <p><strong>ID:</strong>@Car.Id</p>
                        <p><strong>BrandCar:</strong>@Car.BrandCar</p>
                        <p><strong>Model:</strong>@Car.Model</p>
                        <p><strong>EngineCar:</strong>@Car.EngineCar</p>
                        <div>
                            <a asp-page="EditCar" asp-route-id="@Car.Id" class="btn btn-secondary">Изменить</a>
                            <form asp-page-handler="Delete" method="post" asp-route-id="@Car.Id" class="delete-form">
                                <button type="submit" class="btn btn-danger delete-button">Удалить</button>
                            </form>
                        </div>   
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>