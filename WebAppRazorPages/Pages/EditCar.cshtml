@page
@model Project.Pages.EditCarModel
@{
    int[] g = new int[3] { 4, 5, 6 };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
    <!-- Подключение Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Дополнительные стили */
        body {
            padding: 20px;
        }

        form {
            max-width: 500px;
            margin: auto;
        }

        label {
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button[type="submit"] {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #0056b3;
            }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <h1>Информация об Т/С</h1>
        <form method="post">
            <div class="form-group">
                <label for="BrandCar">Марка Т/С</label>
                <input asp-for="Car.BrandCar" type="text" class="form-control" id="BrandCar" name="BrandCar">
                <span asp-validation-for="Car.BrandCar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Model">Модель Т/С</label>
                <input asp-for="Car.Model" type="text" class="form-control" id="Model" name="Model">
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="EngineCar">Тип двигателя</label>
                <input asp-for="Car.EngineCar" type="text" class="form-control" id="EngineCar" name="EngineCar">
                <span asp-validation-for="Car.EngineCar" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>

        <div>
            <canvas id="myChart"></canvas>
        </div>

        <script>
            const ctx = document.getElementById('myChart');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Пробег','Пробег','Пробег'],
                    datasets: [{
                        label: '# of Votes',
                        data: [10000, 20000, 43200],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        </script>

    </div>
</body>
</html>